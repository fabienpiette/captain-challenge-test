<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>HP</th>
      <th>Attack</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.health_points %></td>
        <td><%= character.attack_points %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Fight', new_character_fight_path(character) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

