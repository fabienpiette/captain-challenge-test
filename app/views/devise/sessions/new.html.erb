<div class="container container-captain">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form form-signin' }) do |f| %>
    <h2>Log in</h2>

    <%= f.input :email, autofocus: true, autocomplete: "email" %>
    <%= f.input :password, autocomplete: "current-password" %>
    <%= f.input :remember_me, as: :boolean %>
    <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>

